@model WorkshopExpert.Web.Models.AnalysisEditViewModel

@{
    ViewBag.Title = "GetByAnalysisByWorkshopId";
}
<div class="row">
    <div class="col-md-8">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.Workshop_Id, new { htmlAttributes = new { @class = "form-control" } })

            <div class="form-group">
                @Html.LabelFor(model => model.ProposedWorkshopTitle, htmlAttributes: new { @class = "control-label" })
                @Html.TextBoxFor(model => model.ProposedWorkshopTitle, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ProposedWorkshopTitle, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DurationHours, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.DurationHours, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DurationHours, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.AttendeeProfile, htmlAttributes: new { @class = "control-label" })
                @Html.TextAreaFor(model => model.AttendeeProfile, new { @class = "form-control", @rows = "5" } )
                @Html.ValidationMessageFor(model => model.AttendeeProfile, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ProblemToOvercome, htmlAttributes: new { @class = "control-label" })
                @Html.TextAreaFor(model => model.ProblemToOvercome, new { @class = "form-control", @rows = "5" })
                @Html.ValidationMessageFor(model => model.ProblemToOvercome, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.NeedToFulfill, htmlAttributes: new { @class = "control-label" })
                @Html.TextAreaFor(model => model.NeedToFulfill, new { @class = "form-control", @rows = "5" })
                @Html.ValidationMessageFor(model => model.NeedToFulfill, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default">
            </div>

        }

    </div>

</div>
